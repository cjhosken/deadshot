{
    "name": "electron-deadshot",
    "version": "1.0.0",
    "description": "Electon wrapper for Deadshot.",
    "keywords": [],
    "author": "Christopher Hosken",
    "license": "GPL-3.0-only",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "npx electron-builder --publish always",
        "check": "eslint . --ext .ts,.tsx,.js"
    },
    "devDependencies": {
        "electron": "37.4.0",
        "electron-builder": "26.0.12"
    },
    "dependencies": {
        "@eslint/js": "^9.33.0",
        "concurrently": "^9.2.1",
        "wait-on": "^8.0.4"
    },
    "build": {
        "appId": "cjhosken.deadshot",
        "productName": "Deadshot",
        "directories": {
            "output": "../build/electron"
        },
        "files": [
            "**/*",
            "../build/frontend/**/*",
            "../build/backend/**/*"
        ],
        "extraResources": [
            {
                "from": "../build/backend",
                "to": "backend",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "../build/frontend",
                "to": "frontend",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "portable",
            "icon": "../frontend/public/icon.ico",
            "artifactName": "Deadshot.exe"
        },
        "mac": {
            "target": "dmg",
            "icon": "../frontend/public/icon.icns",
            "artifactName": "Deadshot.dmg"
        },
        "linux": {
            "target": "AppImage",
            "icon": "../frontend/public/icon.png",
            "artifactName": "Deadshot.AppImage"
        }
    }
}
