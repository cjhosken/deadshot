{
    "name": "deadshot",
    "version": "1.0.0",
    "scripts": {
        "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:electron",
        "install:backend": "cd backend && pip install -r requirements.txt",
        "install:frontend": "cd frontend && npm install",
        "install:electron": "cd electron & npm install",
        "dev": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
        "dev:backend": "cd backend && python -m uvicorn main:app --reload",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:electron": "wait-on http://localhost:5173 && cd electron && npm start",
        "build": "npm-run-all build:backend build:frontend build:electron --sequential",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && python build.py",
        "build:electron": "cd electron && npm run build",
        "check": "npm-run-all check:backend check:frontend check:electron",
        "check:backend": "cd backend",
        "check:frontend": "cd frontend && npm run check",
        "check:electron": "cd electron && npm run check"

    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "npm-run-all": "^4.1.5",
        "wait-on": "^8.0.4"
    }
}
